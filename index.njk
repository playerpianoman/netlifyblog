<h2>Categories</h2>
<ul class="category-list">
    {% for category, items in posts %}
    <li>
        {% if category == "aiResearch" %}
            <a href="/ai-research/">AI Research</a> ({{ items | length }} posts)
        {% elif category == "brainstorm" %}
            <a href="/brainstorm/">Brainstorm</a> ({{ items | length }} posts)
        {% elif category == "journal" %}
            <a href="/journal/">Journal</a> ({{ items | length }} posts)
        {% else %}
            <a href="/{{ category | lower }}/">{{ category }}</a> ({{ items | length }} posts)
        {% endif %}
    </li>
    {% endfor %}
</ul> 